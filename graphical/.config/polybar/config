[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/bspwm]
width = 100%
height = 19  ; so that dmenu covers the bar completely
fixed-center = true
enable-ipc = true

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = fixed:pixelsize=10;1
font-1 = Unifont Upper:style=Medium:fontformat=truetype:size=8:antialias=false;0
font-2 = Noto Color Emoji:style=Regular:scale=14

line-size = 3
line-color = #f00

padding-left = 2
padding-right = 2

modules-left = bspwm-state
modules-center = title
modules-right = xkeyboard sxhkd-mode

wm-restack = bspwm

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
fixed-center = false
bottom = true
enable-ipc = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;1
font-1 = Unifont Upper:style=Medium:fontformat=truetype:size=8:antialias=false;0
font-2 = Noto Color Emoji:style=Regular:scale=14

modules-right = filesystem wlan eth backlight-acpi pulseaudio battery temperature date

tray-position = right
tray-padding = 2
;tray-background = #0063ff

wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize

[module/title]
type = internal/xwindow
format-padding = 4

[module/sxhkd-mode]
type = custom/script
exec = exec tail -f $XDG_RUNTIME_DIR/sxhkd/mode.fifo
label = kbmode: %output%
tail = true
format-padding = 2

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock

format = <label-indicator>

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

label-indicator-on-capslock = CapsLk

[module/filesystem]
type = internal/fs
interval = 30  ; default

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%% | %used% / %total%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/xbacklight]
type = internal/xbacklight

format = <ramp> <label>
label = %percentage%%

ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = acpi_video0

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <label-connected>
;format-connected-underline = #9f78e1
label-connected = %essid% (%local_ip%) @ %signal%% (%downspeed%⬇️ %upspeed%⬆️)

format-disconnected =

[module/eth]
type = internal/network
interface = enp0s25
interval = 3.0

;format-connected-underline = #55aa55
;format-connected-prefix = " "
;format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %ifname%: %local_ip%@%linkspeed% (%downspeed%⬇️ %upspeed%⬆️)

format-disconnected =

[module/date]
type = internal/date
interval = 5

label = %date% %time%

date = " %Y-%m-%d"
date-alt = %A %d %B %Y
time = %H:%M:%S

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊
ramp-volume-font = 3

label-muted = 🔇 muted
label-muted-foreground = #666

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
; Need to see if my battery never reports 100%
;full-at = 98

format-charging = <label-charging>
format-charging-prefix = 🔌
;format-charging-underline = #ffb52a
label-charging = %percentage%% %time%
format-charging-font = 3

format-discharging = <label-discharging>
format-discharging-prefix = "🔋"
;format-discharging-underline = ${self.format-charging-underline}
label-discharging = %percentage%% %time%
format-discharging-font = 3

format-full-prefix = ⚡
format-full-prefix-foreground = ${colors.foreground-alt}
;format-full-underline = ${self.format-charging-underline}
format-full-font = 3

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 50

format = <label>
format-prefix = 🌡️
;format-underline = #f50a4d
format-warn = <label-warn>
;format-warn-underline = ${self.format-underline}
format-font = 3

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

[module/ime]
type = custom/script
exec = ibus engine
interval = 2

[module/bspwm-state]
type = custom/script
exec = exec watch_bspwm
tail = true
format-padding = 2

[settings]
screenchange-reload = false

[global/wm]
margin-top = 5
margin-bottom = 5

