# PROGRAMS:
# apparently "Return" must be capitalised
mod4+Return
	i3-sensible-terminal
mod4+a
	dmenu_run
mod4+d
	env DO_FIELD_SPLIT=yes dmenu_surfraw
mod4+shift+d
	env SURFRAW_browser=firefox DO_FIELD_SPLIT=yes dmenu_surfraw
mod4+semicolon
	dmenu_screenshot
mod4+bracketleft
	dmenu_series

# INPUT METHODS (JAP, ENG):
# toggle (mapped with mozc OR script): mod4+i
# NOTE: set in ibus itself as mod4 too
mod4+i
	imswitch.sh
# todo: bind mod4+shift+i to switch to specific engine (which would use dmenu)
# english (direct input mode)
#bindsym mod4+shift+i
# jap(hiragana)
#bindsym mod4+i
# jap(katakana)
#bindsym mod4+i

# WM WINDOW MANAGEMENT:
# kill focused window
mod4+shift+q
	i3-msg kill
# change focus
mod4+{h,j,k,l}
	i3-msg focus {left,down,up,right}
# move focused window
mod4+shift+{h,j,k,l}
	i3-msg move {left,down,up,right}
# split horizontally (following screen)
mod4+shift+s
	i3-msg split v
# split vertically (following screen)
mod4+shift+backslash
	i3-msg split h
# enter fullscreen mode for the focused container
mod4+f
	i3-msg fullscreen toggle
# change container layout (stacked, tabbed, toggle split)
mod4+{s,w,e}
	i3-msg layout {stacking,tabbed,toggle split}
# toggle tiling / floating
mod4+shift+space
	i3-msg floating toggle
# change focus between tiling / floating windows
mod4+space
	i3-msg focus mode_toggle
# focus the parent container
#bindsym mod4+a focus parent
# focus the child container
#bindsym mod4+d focus child
# move the currently focused window to the scratchpad
mod4+shift+minus
	i3-msg move scratchpad
# show the next scratchpad window, cyling if there are many, or hide the focused scratchpad window
mod4+minus
	i3-msg scratchpad show
# switch to workspace
mod4+{1-9,0}
	i3-msg workspace {1-9,10}
# move focused container to workspace
mod4+shift+{1-9,0}
	i3-msg move container to workspace {1-9,10}
# resize
mod4+r: {h,j,k,l}
	i3-msg resize {shrink width,grow height,shrink height,grow width} 10 px or 10 ppt

# AUX:
# increase volume
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +10%
# decrease volume
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -10%
# increase volume (more granular)
mod4+XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%
# decrease volume (more granular)
mod4+XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%
# mute volume
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
# mute mic
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle

# META:
# reload the configuration file
mod4+shift+c
	i3-msg reload; pkill -SIGUSR1 '^sxhkd$'
# reload polybar (we don't want auto-reload upon modification of polybar config)
mod4+shift+p
	polybar-msg cmd restart
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
mod4+shift+r
	i3-msg restart
# decide whether to log out, shut down, or restart computer
mod4+shift+x
	dmenu_powermenu
