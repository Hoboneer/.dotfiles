# PROGRAMS:
# (apparently "Return" must be capitalised):
# Open terminal.
mod4 + Return
	x-terminal-emulator
# Program launcher.
mod4 + space
	dmenu_run
# Dmenu surfraw (qutebrowser).
mod4 + d
	env DO_FIELD_SPLIT=yes dmenu_surfraw
# Dmenu surfraw (firefox).
mod4 + shift + d
	env SURFRAW_browser=firefox DO_FIELD_SPLIT=yes dmenu_surfraw
# Execute dmenu scripts for convenience utilities: screenshot, series, flatpak runner.
mod4 + semicolon; {s,w,f}
	dmenu_{screenshot,series,flatpak_run}
# Execute non-dmenu scripts for convenience utilities: calendar, pictures, magnifier, keybinds.
mod4 + apostrophe; {d,p,z,k}
	{zenity --calendar --text='Current Month',sxiv -t ~/Pictures/,wmzoom,dmenu_sxhkd_binds}

# AUX:
# Increase volume.
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +10%
# Decrease volume.
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -10%
# Increase volume (more granular).
mod4 + XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%
# Decrease volume (more granular).
mod4 + XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%
# Mute volume.
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
# Mute mic.
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle

# META:
# Reload config for bspwm, sxhkd, or polybar.
mod4 + shift + r; {b,s,p}
	{"$\{XDG_CONFIG_HOME:-$HOME/.config\}/bspwm/bspwmrc",pkill -SIGUSR1 -x sxhkd,polybar-msg cmd restart}
# Decide whether to log out, shut down, or restart computer.
mod4 + shift + x
	dmenu_powermenu

# BSPWM MISC.:
# Close (via X) or kill (via `kill`, probably) the focused window.
mod4 + {_,shift + }w
	bspc node -{c,k}
# Alternate between the tiled and monocle layout.
mod4 + m
	bspc desktop -l next

## send the newest marked node to the newest preselected node
#mod4 + y
#	bspc node newest.marked.local -n newest.!automatic.local

## swap the current node and the biggest node
#mod4 + g
#	bspc node -s biggest

# BSPWM STATE/FLAGS:
# Set the window state: tiled, pseudo_tiled, floating, fullscreen.
mod4 + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
# Toggle the node flags: marked, locked, sticky, private.
mod4 + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# BSPWM FOCUS/SWAP:
# Focus/swap the node in the given direction.
mod4 + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
# Focus the node for the given path jump.
mod4 + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}
# Focus the next/previous node in the current desktop.
mod4 + {_,shift + }c
	bspc node -f {next,prev}.local
# Focus the next/previous desktop in the current monitor.
mod4 + bracket{left,right}
	bspc desktop -f {prev,next}.local
# Focus the last node/desktop.
mod4 + {grave,Tab}
	bspc {node,desktop} -f last
# Focus the older or newer node in the focus history.
mod4 + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on
# Focus or send to the given desktop.
mod4 + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

