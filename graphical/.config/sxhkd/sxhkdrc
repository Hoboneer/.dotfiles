# PROGRAMS:
# (apparently "Return" must be capitalised):
# Open terminal.
mod4 + Return
	x-terminal-emulator
# Open terminal and attach to screen session.
mod4 + shift + Return
	x-terminal-emulator screen -x
# Program launcher (direct to programs).
mod4 + space
	cmd="$(dmenu_path | dmenu)"; $cmd &
# Program launcher (output run through $SHELL).
mod4 + shift + space
	dmenu_path | dmenu | $\{SHELL:-"/bin/sh"\} &
# Browser.
mod4 + shift + b
	x-www-browser
# Mail.
mod4 + shift + m
	thunderbird
# Paint on screen.
mod4 + shift + p
	gromit-mpx
# Dmenu surfraw (qutebrowser).
mod4 + d
	if wmctrl -lx | awk -v found=0 '$3 ~ /qutebrowser/ \{found=1; exit\} END \{exit found\}'; then \
		setsid qutebrowser & \
	fi; \
	env DO_FIELD_SPLIT=yes SURFRAW_browser=qutebrowser dmenu_surfraw 2>&1 | xargs -n1 -d'\n' notify-send -u critical -t 5000
# Dmenu surfraw (qutebrowser; skip options).
mod4 + shift + d
	if wmctrl -lx | awk -v found=0 '$3 ~ /qutebrowser/ \{found=1; exit\} END \{exit found\}'; then \
		setsid qutebrowser & \
	fi; \
	env DO_FIELD_SPLIT=yes DO_SKIP_OPTIONS=yes SURFRAW_browser=qutebrowser dmenu_surfraw 2>&1 | xargs -n1 -d'\n' notify-send -u critical -t 5000
# Dmenu surfraw (firefox).
mod4 + e
	if wmctrl -lx | awk -v found=0 '$3 ~ /Firefox/ \{found=1; exit\} END \{exit found\}'; then \
		setsid firefox & \
	fi; \
	env DO_FIELD_SPLIT=yes SURFRAW_browser=firefox dmenu_surfraw 2>&1 | xargs -n1 -d'\n' notify-send -u critical -t 5000
# Dmenu surfraw (firefox; skip options).
mod4 + shift + e
	if wmctrl -lx | awk -v found=0 '$3 ~ /Firefox/ \{found=1; exit\} END \{exit found\}'; then \
		setsid firefox & \
	fi; \
	env DO_FIELD_SPLIT=yes DO_SKIP_OPTIONS=yes SURFRAW_browser=firefox dmenu_surfraw 2>&1 | xargs -n1 -d'\n' notify-send -u critical -t 5000
# Execute dmenu scripts for convenience utilities: screenshot, series, flatpak runner, emojis.
mod4 + semicolon; {s,w,f,e}
	dmenu_{screenshot,series,flatpak_run,emoji}
# Execute non-dmenu scripts for convenience utilities: calendar, pictures, magnifier, keybinds, latex scratchpad, watch video url in clipboard.
mod4 + apostrophe; {d,p,z,k,l,v}
	{zenity --calendar --text='Current Month' \
	,sxiv -t ~/Pictures/ \
	,wmzoom \
	,dmenu_sxhkd_binds \
	,latex_scratch \
	,clip="$(xclip -selection clipboard -o)"; case $clip in (http?://*) notify-send -t 1000 "Opening $clip"; mpv --profile=1080p "$clip" ;; (*) notify-send -t 5000 -u critical "'$clip' doesn't look like a URL" ;; esac \
	}
# Switch to some open graphical program.
mod4 + slash
	dmenu_switch_xprog

# AUX:
# Increase volume.
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +10%
# Decrease volume.
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -10%
# Increase volume (more granular).
mod4 + XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%
# Decrease volume (more granular).
mod4 + XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%
# Mute volume.
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
# Mute mic.
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle
# Move mouse to centre of focussed window or screen (if no window is there).
mod4 + equal
	centre_mouse

# META:
# Reload config for bspwm, sxhkd, polybar, or watchers.
mod4 + shift + r; {b,s,p,w}
	cfg_dir="$\{XDG_CONFIG_HOME:-$HOME/.config\}"; \
	{"$cfg_dir/bspwm/bspwmrc",pkill -SIGUSR1 -x sxhkd,polybar-msg cmd restart,"$cfg_dir/bspwm/launch_watchers"}
# Decide whether to log out, shut down, or restart computer.
mod4 + shift + x
	dmenu_powermenu

# BSPWM MISC.:
# Close (via X) or kill (via `kill`, probably) the focused window.
mod4 + {_,shift + }w
	bspc node -{c,k}
# Alternate between the tiled and monocle layout.
mod4 + m
	bspc desktop -l next

## send the newest marked node to the newest preselected node
#mod4 + y
#	bspc node newest.marked.local -n newest.!automatic.local

## swap the current node and the biggest node
#mod4 + g
#	bspc node -s biggest

# BSPWM STATE/FLAGS:
# Set the window state: tiled, pseudo_tiled, floating, toggle fullscreen.
mod4 + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,~fullscreen}
# Toggle the node flags: marked, locked, sticky, private.
mod4 + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# BSPWM FOCUS/SWAP:
# Focus/swap the node in the given direction.
mod4 + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
# Focus the node for the given path jump.
mod4 + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}
# Focus the next/previous node in the current desktop.
mod4 + {_,shift + }c
	bspc node -f {next,prev}.local
# Focus the next/previous desktop in the current monitor.
mod4 + bracket{left,right}
	bspc desktop -f {prev,next}.local
# Focus the next/previous monitor.
mod4 + shift + bracket{left,right}
	bspc monitor -f {prev,next}; bspc node -f local
# Focus the last node/desktop.
mod4 + {grave,Tab}
	bspc {node,desktop} -f last
# Focus the older or newer node in the focus history.
mod4 + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on
# Focus or send to the given desktop.
mod4 + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

